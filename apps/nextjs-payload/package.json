{
	"name": "nextjs-payload",
	"version": "0.0.0",
	"type": "module",
	"private": true,
	"scripts": {
		"dev": "dotenvx run --env-file ../../.env.local -- next dev --turbopack",
		"build": "dotenvx run --env-file ../../.env.local -- next build",
		"start": "dotenvx run --env-file ../../.env.local -- next start",
		"payload": "dotenvx run --env-file ../../.env.local -- payload",
		"migrate": "dotenvx run --env-file ../../.env.local -- payload migrate:create && payload migrate",
		"generate": "run-p generate:importmap generate:types",
		"generate:importmap": "dotenvx run --env-file ../../.env.local -- payload generate:importmap",
		"generate:types": "dotenvx run --env-file ../../.env.local -- payload generate:types",
		"seed": "dotenvx run --env-file ../../.env.local -- payload run ./lib/seed/run-seed.ts",
		"lint": "next lint --max-warnings 0",
		"check-types": "tsc --noEmit"
	},
	"dependencies": {
		"@beluga/design-system": "workspace:*",
		"@beluga/mailer": "workspace:*",
		"@beluga/translations": "workspace:*",
		"@beluga/ui": "workspace:*",
		"@beluga/utils": "workspace:*",
		"@fontsource-variable/inter": "^5.2.6",
		"@fontsource/geist-mono": "^5.2.6",
		"@fontsource/krona-one": "^5.2.6",
		"@formatjs/intl-localematcher": "^0.6.1",
		"@hookform/resolvers": "^5.1.1",
		"@monaco-editor/react": "4.7.0",
		"@payloadcms/db-postgres": "^3.46.0",
		"@payloadcms/next": "^3.46.0",
		"@payloadcms/richtext-lexical": "^3.46.0",
		"@payloadcms/translations": "^3.46.0",
		"@payloadcms/ui": "^3.46.0",
		"@tailwindcss/postcss": "^4.1.11",
		"beluga-i18n": "^0.2.0",
		"cookies-next": "^6.0.0",
		"framer-motion": "^12.23.0",
		"graphql": "^16.11.0",
		"html-react-parser": "^5.2.5",
		"lucide-react": "^0.525.0",
		"negotiator": "^1.0.0",
		"next": "^15.3.5",
		"next-safe-action": "^8.0.7",
		"next-themes": "^0.4.6",
		"npm-run-all": "^4.1.5",
		"payload": "^3.46.0",
		"postcss": "^8.5.6",
		"react": "19.1.0",
		"react-dom": "19.1.0",
		"react-hook-form": "^7.60.0",
		"react-scan": "^0.4.3",
		"sharp": "^0.34.2",
		"tailwindcss": "^4.1.11",
		"tailwindcss-animate": "^1.0.7",
		"zod": "^3.25.76"
	},
	"devDependencies": {
		"@beluga/typescript": "workspace:*",
		"@types/negotiator": "^0.6.4",
		"@types/node": "^24.0.12",
		"@types/react": "19.1.8",
		"@types/react-dom": "19.1.6",
		"typescript": "5.8.3"
	}
}
